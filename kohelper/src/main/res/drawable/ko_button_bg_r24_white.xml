<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/ko_color_disable" android:endColor="@color/ko_color_disable" android:angle="90" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/ko_bg_light" android:endColor="@color/ko_bg_light" android:angle="90" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/ko_white" android:endColor="@color/ko_white" android:angle="90" />
            <corners android:radius="24dp"  />
        </shape>
    </item>

</selector>