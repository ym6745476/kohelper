<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true">
    <shape>
        <solid android:color="@color/ko_bg_light" />
        <corners android:bottomRightRadius="10dip" />
        <stroke
            android:width="0dip"
            android:color="@color/ko_bg_light" />
    </shape>
</item>

<item android:state_focused="true" android:state_pressed="false">
    <shape>
        <solid android:color="@color/ko_bg_light" />
        <corners android:bottomRightRadius="10dip" />
        <stroke
            android:width="0dip"
            android:color="@color/ko_bg_light" />
    </shape>
</item>

<item>
    <shape>
        <solid android:color="@color/ko_transparent" />
        <corners android:bottomRightRadius="10dip" />
        <stroke
            android:width="0dip"
            android:color="@color/ko_transparent" />
    </shape>
</item>

</selector>