<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/ko_color_disable" android:endColor="@color/ko_color_disable" android:angle="90" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/ko_color_accent" android:endColor="@color/ko_color_accent" android:angle="90" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/ko_color_primary" android:endColor="@color/ko_color_primary" android:angle="90" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>

</selector>