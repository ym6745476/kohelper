<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="KoCircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="KoAspectRatioImageView">
        <attr name="width_ratio" format="integer"/>
        <attr name="height_ratio" format="integer"/>
    </declare-styleable>

    <declare-styleable name="KoRoundImageView">
        <attr name="radius" format="integer"/>
    </declare-styleable>


</resources>